<%= simple_form_for @book, :html => {:multipart => true} do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Vyberte Kategóriu") %>
  <%= f.file_field :bookavatar %>
  <%= f.input :title, label: "Názov Knihy" %>
  <%= f.input :description, label: "O knihe" %>
  <%= f.input :author, label: "Autor" %>
  <%= f.button :submit, label: "Pridať Knihu", class:"btn-custom2" %>

<% end %>