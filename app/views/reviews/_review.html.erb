<div class="review">

	<div class="review-rating" data-score="<%= review.rating %>"></div>
	<p class="review-comment"><%= review.comment %></p>


	<% if user_signed_in? %>

		<% if review.user_id == current_user.id %>

			<div class="links btn-group">

				<%= link_to "Upraviť Recenziu", edit_book_review_path(review.book_id, review), class: "btn btn-custom" %>
				<%= link_to "Odstrániť Recenziu", book_review_path(review.book_id, review), method: :delete, data: { confirm: "Ste si istý?" }, class: "btn btn-custom" %>

			</div>
		
		<% end %>	

	<% end %>

</div>		